{
  "manifest_version": 2,

  "name": "Timezoner",
  "description": "A simple extension to help you coordinate across timezones.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html"
  },

  "permissions": ["activeTab", "tabs"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/build/main.js"]
    }
  ]
}
